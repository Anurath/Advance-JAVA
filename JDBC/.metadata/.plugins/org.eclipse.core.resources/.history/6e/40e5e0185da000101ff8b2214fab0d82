package com.jsp.jdbccrud;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.Scanner;

public class PersonInertOperation1 {

	public static void main(String[] args) {
		
		String url = "jdbc:postgresql://localhost:5432/personcrud";
		String user = "postgres";
		String pass = "Anurath@123";
		
		try(Connection con = DriverManager.getConnection(url,user,pass); Scanner sc = new Scanner(System.in);)
		{
			String query = "INSERT INTO pesron VALUES(?,?,?)";
			
			PreparedStatement st = con.prepareStatement(query);
			
			System.out.print("Enter ID: ");
			int id = sc.nextInt();
			sc.nextLine();
			System.out.print("Enter Name: ");
			String name = sc.nextLine();
			System.out.print("Enter age: ");
			int age = sc.nextInt();
			
			st.setInt(1, id);
			st.setString(2, name);
			st.setInt(3, age);
			
			st.execute();
			
		}
		catch(SQLException e)
		{
			System.out.println(e);
		}
	}
}
